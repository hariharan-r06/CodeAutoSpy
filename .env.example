# ===========================================
# CodeAutopsy Environment Configuration
# ===========================================

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_APP_ID=your_github_app_id

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/codeautopsy

# Redis (for Bull Queue)
REDIS_URL=redis://localhost:6379

# Notification Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
MAX_FIX_ATTEMPTS_PER_HOUR=5
MAX_LINES_AUTO_FIX=100

# Confidence Thresholds
MIN_CONFIDENCE_FOR_PR=0.85
MIN_CONFIDENCE_FOR_ISSUE=0.5

# Blacklist (comma-separated repo patterns)
BLACKLIST_REPOS=
PROTECTED_PATHS=config,secrets,.github/workflows,.env

# Logging
LOG_LEVEL=info
