# ===========================================
# CodeAutoSpy Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_APP_ID=

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres

# Redis (for Bull Queue)
REDIS_URL=redis://localhost:6379

# Notification Webhooks (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
MAX_FIX_ATTEMPTS_PER_HOUR=5
RATE_LIMIT_WINDOW_MS=3600000

# Confidence Thresholds
MIN_CONFIDENCE_FOR_PR=0.7
MIN_CONFIDENCE_FOR_ISSUE=0.5

# Blacklisted Repositories (comma-separated)
BLACKLISTED_REPOS=

# Logging
LOG_LEVEL=info
